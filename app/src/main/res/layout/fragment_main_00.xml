<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_main_00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_cur_day_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 날짜, 현재 시각"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_main_00" />

    <TextView
        android:id="@+id/tv_cur_weather_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날씨, 기온"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cur_day_time" />

    <Button
        android:id="@+id/btn_cur_share_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 날씨를 공유해보세요"
        app:layout_constraintBottom_toBottomOf="@id/tv_cur_weather_temp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_cur_weather_temp" />

    <TextView
        android:id="@+id/tv_compare_yesterday_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어제 날씨 비교 멘트"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_cur_share_weather" />

    <TextView
        android:id="@+id/tv_week_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이번주 날씨 멘트"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_compare_yesterday_weather" />

    <TextView
        android:id="@+id/tv_coordi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="코디 멘트"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_week_weather" />

    <TextView
        android:id="@+id/tv_cur_perceived_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일교차 체감온도"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cur_weather_temp" />


    <TextView
        android:id="@+id/tv_cur_dust_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cur_perceived_temp" />


</androidx.constraintlayout.widget.ConstraintLayout>